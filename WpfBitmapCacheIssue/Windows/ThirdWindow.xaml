<Window x:Class="WpfBitmapCacheIssue.ThirdWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="[ Third Window ]" Height="256" Width="256" ResizeMode="NoResize" ShowInTaskbar="False" WindowStyle="ToolWindow">
    <Grid Background="#FF111111">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" >
            <Button Content="Enable Dirty Rects" Width="184" Height="30" Background="#FF262424" BorderBrush="#FF38ED27" Foreground="#FF2DFFA4" Click="EnableDirtyRect"/>
            <Button Content="Disable Dirty Rects" Width="184" Height="30" Background="#FF262424" BorderBrush="#FFED4427" Foreground="#FFFF2D2D" Margin="0,10,0,0" Click="DisableDirtyRect"/>
        </StackPanel>
    </Grid>
</Window>
